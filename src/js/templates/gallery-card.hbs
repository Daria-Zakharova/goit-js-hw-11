{{#each this}}
<div class="gallery__card">
    <a href={{largeImageURL}}>
        <img  class="gallery__img" src="{{webformatURL}}" alt="{{tags}}">
    </a>
    <div class="gallery__info">
        <p class="gallery__info-item">
            <span class="gallery__info-type">Likes</span>
            {{likes}}
        </p>
        <p class="gallery__info-item">
            <b>Views</b>
            {{views}}
        </p>
        <p class="gallery__info-item">
            <span class="gallery__info-type">Comments</span>
            {{comments}}
        </p>
        <p class="gallery__info-item">
            <span class="gallery__info-type">Downloads</span>
            {{downloads}}
        </p>
        
    </div>
</div>
{{/each}}
